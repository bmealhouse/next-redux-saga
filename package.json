{
  "name": "next-redux-saga",
  "version": "3.0.0-beta.2",
  "description": "redux-saga HOC for Next.js",
  "repository": "https://github.com/bmealhouse/next-redux-saga.git",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "main": "dist/next-redux-saga.umd.js",
  "jsnext:main": "dist/next-redux-saga.es.js",
  "module": "dist/next-redux-saga.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "format": "prettier --write",
    "precommit": "xo && lint-staged",
    "prepush": "xo && yarn test",
    "prerelease": "yarn build",
    "release": "yarn version && git push origin master --tags && release",
    "start": "next",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "verbose": true,
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true
  },
  "renovate": {
    "automerge": true,
    "automergeType": "branch-push",
    "pinVersions": true,
    "schedule": [
      "every friday"
    ],
    "packageRules": [{
      "packageNames": ["jest", "babel-jest"],
      "groupName": "jest packages"
    }]
  },
  "xo": {
    "envs": [
      "browser",
      "jest"
    ],
    "extends": [
      "plugin:react/recommended",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "rules": {
      "capitalized-comments": 0,
      "import/order": 0
    }
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/runtime": "7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "8.2.6",
    "babel-jest": "23.4.2",
    "enzyme": "3.5.0",
    "enzyme-adapter-react-16": "1.3.1",
    "enzyme-to-json": "3.3.4",
    "eslint": "5.4.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-react": "7.11.1",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "lint-staged": "7.2.2",
    "next": "6.1.1",
    "next-redux-wrapper": "2.0.0",
    "prettier": "1.14.2",
    "prop-types": "15.6.2",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-redux": "5.0.7",
    "react-test-renderer": "16.4.2",
    "redux": "4.0.0",
    "redux-saga": "0.16.0",
    "release": "4.0.2",
    "rollup": "0.65.0",
    "rollup-plugin-babel": "4.0.0-beta.8",
    "xo": "0.22.0"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/next-redux-saga/issues"
  },
  "homepage": "https://github.com/bmealhouse/next-redux-saga#readme",
  "keywords": [
    "next",
    "nextjs",
    "Next.js",
    "next-redux",
    "next-redux-wrapper",
    "react",
    "react-redux",
    "redux",
    "redux-saga"
  ]
}
