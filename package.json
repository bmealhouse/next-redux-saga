{
  "name": "next-redux-saga",
  "version": "3.0.0",
  "description": "redux-saga HOC for Next.js",
  "repository": "https://github.com/bmealhouse/next-redux-saga.git",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "main": "dist/next-redux-saga.umd.js",
  "jsnext:main": "dist/next-redux-saga.es.js",
  "module": "dist/next-redux-saga.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "format": "prettier --write",
    "precommit": "xo && lint-staged",
    "prepush": "xo && yarn test",
    "prerelease": "yarn build",
    "release": "yarn version && git push origin master --tags && release",
    "start": "next",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "verbose": true,
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "renovate": {
    "automerge": true,
    "automergeType": "branch-push",
    "pinVersions": true,
    "schedule": [
      "every friday"
    ],
    "packageRules": [
      {
        "packageNames": [
          "jest",
          "babel-jest"
        ],
        "groupName": "jest packages"
      }
    ]
  },
  "xo": {
    "envs": [
      "browser",
      "jest"
    ],
    "extends": [
      "plugin:react/recommended",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "prettier": true,
    "rules": {
      "capitalized-comments": 0,
      "import/order": 0
    }
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/runtime": "7.1.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "enzyme-to-json": "3.3.4",
    "eslint": "5.7.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "lint-staged": "7.3.0",
    "next": "7.0.2",
    "next-redux-wrapper": "2.0.0",
    "prettier": "1.14.3",
    "prop-types": "15.6.2",
    "react": "16.6.0",
    "react-dom": "16.6.0",
    "react-redux": "5.1.0",
    "react-test-renderer": "16.5.2",
    "redux": "4.0.1",
    "redux-saga": "0.16.2",
    "release": "4.0.2",
    "rollup": "0.66.6",
    "rollup-plugin-babel": "4.0.3",
    "xo": "0.23.0"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/next-redux-saga/issues"
  },
  "homepage": "https://github.com/bmealhouse/next-redux-saga#readme",
  "keywords": [
    "next",
    "nextjs",
    "Next.js",
    "next-redux",
    "next-redux-wrapper",
    "react",
    "react-redux",
    "redux",
    "redux-saga"
  ]
}
